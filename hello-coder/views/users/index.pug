extends ../layouts/common
block content
    h1 Users

    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") New

        form.ml-auto(action="/users/search", method="GET", class="form-group")
            input(type="text", name="q", class="form-controll")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Avatar 
            th Name
            th Phone 
            th Action
        each user in users
            tr
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href='/users/' + user.id) View