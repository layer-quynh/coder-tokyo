extends ../layouts/common

block content
    h1 Products
    .d-flex.align-items-center

        form.ml-auto(action="/products/search", method="GET", class="form-group")
            input(type="text", name="q", class="form-controll")
            button(class="btn btn-primary ml-2") Search

    .row
        each product in products
            .col-sm-3.card(style='width: 18rem;')
                .card-body
                    h5.card-title= product.name
                    p.card-text= product.description
                    a.btn.btn-primary(href='#') Go somewhere

    nav(aria-label='Page navigation example')
        form.ml-auto(action="/products", method="GET", class="form-group")
        ul.pagination
            li.page-item
                a.page-link(href='#', aria-label='Previous')
                    span(aria-hidden='true') &laquo;
                    span.sr-only Previous
            each page in displayPage            
                li.page-item
                    a.page-link(href="#")= page
            li.page-item
                a.page-link(href='#', aria-label='Next')
                    span(aria-hidden='true') &raquo;
                    span.sr-only Next

